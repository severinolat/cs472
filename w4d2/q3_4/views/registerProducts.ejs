<%- include('./header') %>

    <title>Product Registration page</title>
    <link rel="stylesheet" href="css/<%= choosenStyle %>">
   
</head>
<body>
    <div id="container">
        <h3> Enter informations about product: </h3> 
    
        <form action='/addToCart' method='post'>
            <div class="form-group">
                <label for="id">ID </div>
                <input type='text' name='id' class="form-control" id="id">
            </div>
            <div class="form-group">
                <label for="name">Name </label>
                <input type='text' name='name' class="form-control" id="name">  
            </div>
            <div class="form-group">
                <label>Description</label> 
                <input type='text' class="form-control" name='description'>
            </div>
            <div class="form-group">
                <label>Quantity</label> 
                <input type='text' class="form-control" name='quantity'>
            </div>
            <div class="form-group">
                <label>Price</label>
                <input type='text' class="form-control" name='price'>
            </div>
    
            
            <div id="item11"><button id= "btn" class="btn btn-primary" type="submit" name="submitBtn" value="Add to Cart">Add to Cart</button></div> 
    </div>
                  
